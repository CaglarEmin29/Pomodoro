# Veritabanı ayarları
DATABASE_URL=sqlite:///pomodoro.db

# Güvenlik ayarları (üretim ortamında mutlaka değiştirin!)
SECRET_KEY=your-secret-key-here

# Google OAuth ayarları
# Bu bilgileri Google Cloud Console'dan alabilirsiniz:
# https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google OAuth callback URL (Google Cloud Console'da Authorized redirect URIs'ye ekleyin)
# Geliştirme ortamı için: http://localhost:5000/auth/google/callback
# Üretim ortamı için: https://yourdomain.com/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Geliştirme ayarları
FLASK_ENV=development
FLASK_DEBUG=True
